<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Establece la orientación vertical -->
    <!-- TextView para mostrar un mensaje -->
    <TextView
        android:id="@+id/tvPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Hola, Mundo!"
        android:textSize="24sp"
        android:layout_gravity="center" />  <!-- Centra el TextView dentro del LinearLayout -->

    <!-- RecyclerView para mostrar la lista de cumpleaños (oculto por ahora) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBirthdays"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" /> <!-- El RecyclerView ocupará el resto del espacio disponible -->

</LinearLayout>


